<?xml version="1.0" encoding="UTF-8" ?>
<beans xmlns="http://www.springframework.org/schema/beans"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns:context="http://www.springframework.org/schema/context"
  xsi:schemaLocation="http://www.springframework.org/schema/beans
  http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
  http://www.springframework.org/schema/context
  http://www.springframework.org/schema/context/spring-context.xsd">

  <bean id="student" class="org.example.alvin.springexamples.bean.Student"/>

  <bean id="woman" class="org.example.alvin.springexamples.bean.Woman" />
  <bean id="sayHiClass" class="org.example.alvin.springexamples.bean.SayHiClass">
    <lookup-method name="getPeople" bean="woman" />
  </bean>

  <context:component-scan base-package="org.example.alvin.springexamples" />

</beans>